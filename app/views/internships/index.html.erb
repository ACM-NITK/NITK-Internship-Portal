
<h1>Internships</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Apply By</th>
      <th>Start</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @internships.each do |internship| %>
      <tr>
        <td><%= internship.title %></td>
        <td><%= internship.deadline %></td>
        <td><%= internship.start %></td>

        <td><%= link_to 'Show', company_internship_path(@company,internship) %></td>
        <td><%= link_to 'Destroy', [@company, internship], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Internship', new_company_internship_path %> |
<%= link_to 'Back', company_path(@company) %>
