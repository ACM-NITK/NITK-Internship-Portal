<div class="sidebar" data-color="white" data-active-color="danger">
  <!--
    Tip 1: You can change the color of the sidebar using: data-color="blue | green | orange | red | yellow"
-->
  <div class="logo">
    <a href="http://www.creative-tim.com" class="simple-text logo-mini">
      <div class="logo-image-small">
        <img src="../assets/img/logo-small.png">
      </div>
    </a>
    <a href="http://www.creative-tim.com" class="simple-text logo-normal">
      Internship Portal
      <!-- <div class="logo-image-big">
        <img src="../assets/img/logo-big.png">
      </div> -->
    </a>
  </div>
  <div class="sidebar-wrapper">
    <ul class="nav">

      <li>
        <a href="./dashboard.html">
          <i class="nc-icon nc-bank"></i>
          <p>Dashboard</p>
        </a>
      </li>


      <% if user_signed_in? %>
        <li class="<%= activeClass(internships_path) %>">
          <a href="/internships">
            <i class="nc-icon nc-diamond"></i>
            <p>Internships</p>
          </a>
        </li>

        <% if current_user.manager? %>
          <li class="<%= activeClass(company_path(current_user.company.id)) %>">
            <a href="/companies/<%= current_user.company.id %>">
              <i class="nc-icon nc-pin-3"></i>
              <p>My Company</p>
            </a>

          </li>
          <% else %>
        <li class="<%= activeClass(companies_path) %>">
          <a href="/companies">
            <i class="nc-icon nc-pin-3"></i>
            <p>Companies</p>
          </a>
        </li>
          <% end %>
        <li class="<%= activeClass(applications_path) %>">
          <a href="/applications">
            <i class="nc-icon nc-bell-55"></i>
            <p>My Applications</p>
          </a>
        </li>

        <% if current_user.student? %>
        <li class="<%= activeClass(student_table_path(StudentTable.find_by_user_id(current_user.id))) %>">
          <%#= link_to 'User Profile', student_table_path(StudentTable.where(user_id: current_user.id)) %>
          <a href="/student_tables/<%= StudentTable.find_by_user_id(current_user.id).id %>">
            <i class="nc-icon nc-single-02"></i>
            <p>User Profile</p>
          </a>
        </li>
        <% end %>
      <% end %>

    </ul>
  </div>
</div>