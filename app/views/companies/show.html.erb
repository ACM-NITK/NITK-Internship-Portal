

<p>
  <strong>Name:</strong>
  <%= @company.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= simple_format @company.description %>
</p>

<br>

<% if can? :create, Internship %>
  <%= link_to 'Post an Internship', new_company_internship_path(@company) %>
<%end %>

<br>

<% if can? :edit, Company %>
  <%= link_to 'Edit', edit_company_path(@company) %>
<%end %>



<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Apply By</th>
    <th>Start</th>

    <th colspan="3"></th>
  </tr>
  </thead>
  <br>
  <br>
  <br>
  <strong>Internships</strong>

  <tbody>
  <% @company.internships.each do |internship| %>
    <tr>
      <td><%= internship.title %></td>
      <td><%= internship.deadline %></td>
      <td><%= internship.start %></td>
      <td><%= link_to 'Show', company_internship_path(@company,internship) %></td>
      <% if can? :destroy, Internship %>
        <td><%= link_to 'Destroy', [@company, internship], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
        </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'Back', companies_path %>